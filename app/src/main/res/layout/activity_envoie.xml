<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    android:padding="40dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/yonne_rectangle"
        android:paddingTop="10dp"
        />

    <TextView
        android:id="@+id/txt_envoie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Veillez resenier les informations de l'envoie"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textColor="#FFF"
        android:textSize="20dp"
        />


    <EditText
        android:layout_marginTop="40dp"
        android:id="@+id/txt_montant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Montant a envoyer"
        android:inputType="numberSigned"
        android:paddingLeft="0dp"
        android:textColor="#FFF"
        android:textColorHint="@color/zone"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/txt_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:hint="Date d'envoie"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"
        android:paddingLeft="0dp"
        android:drawablePadding="5dp"
        android:textColorHint="@color/zone"
        android:textSize="30dp"

        />



    <Button
        android:id="@+id/btn_envoyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Envoyer"
        android:backgroundTint="@color/zone"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>